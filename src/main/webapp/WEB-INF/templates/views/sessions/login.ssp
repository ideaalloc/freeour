					</div>
					<div class="buttons">
						<a href="#">
						    <label><input type="checkbox" name="rememberMe" value="true">记住我</label>
						</a>
						<input class="bluebutton" type="submit" value="登录">
						<div class="clear"> </div>
					</div>

				</form>
				<!----------end form----------->
		</div>
